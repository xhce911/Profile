<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pirate Media</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
</head>
<body>
    <section class="hero ">
        <div class="hero-body">
           <section class="hero is-medium is-centered is-link">
               <div class="hero-body">
                   <h1 class="title">Pirata Media Post</h1>
               </div>
           </section>
         
          <div class="container">
            <div class="columns">
              <div class="column is-8 is-offset-2">
                <figure class="image is-16by9">
                  <img src="../images/first-post.png" alt="">
                </figure>
              </div>
            </div>
    
            <section class="section">
              <div class="columns">
                <div class="column is-8 is-offset-2">
                  <div class="content is-medium">
                    <h2 class="subtitle is-4"><%= page.logDate.toLocaleDateString() %></h2>
                    <h1 class="title"><%= page.title %></h1>
                    <small class="subtitle"><%= page.author%></small>
                    <%- page.sanitizedHtml %>
                  </div>
                </div>
              </div>
            </section>
    
            <div class="is-divider is-centered"></div>
            <div class="columns is-centered">
              <div class="column is-one-quarter">
                <a href="/pages/edit/<%= page.id %>" class="button is-default">Editar</a>
              <a href="/" class="button is-primary">Todos los posts</a>
              </div>
            </div>
            
          </div>
        </div>
      </section>
    
      <!-- newsletter -->
      <section class="section">
        <div class="columns">
          <div class="column is-10 is-offset-1">
            <div class="container has-text-centered is-fluid">
              <div class="hero is-light">
                <div class="hero-body">
                  <h2 class="title is-4">¿Te gustaría seguir al día con  nuestras noticias?</h2>
                    <div class="column is-6 is-offset-3">
                      <div class="field has-addons has-addons-centered">
                        <div class="control is-expanded">
                          <input class="input " type="text" placeholder="ingresa tu Email">
                        </div>
                        <div class="control">
                          <a class="button is-info">
                            Subscribete
                          </a>
                        </div>
                      </div>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    
      <!-- Articles -->
    
      <section class="hero ">
        <div class="hero-body">
          <div class="container">
                 
            <section class="section">
                <div class="columns is-variable is-8">
                    <% pages.forEach(page => { %>    
                    <div class="column is-5 is-offset-1 ">
                    <div class="content is-medium">
                        <h2 class="subtitle is-5 has-text-grey"> <%= page.logDate.toLocaleDateString() %></h2>
                        <h1 class="title has-text-black is-3"> <%= page.title%></h1>
                        <small> <%= page.author%></small>
                        <%- page.sanitizedHtml %>
                        <a href="/" target="_blank" class="button is-primary">Leer más</a>
                    </div>
                    </div>
                    <% }) %>
                </div>
            </section>
            </div>
        </div>
     </section>
            
</body>
</html>